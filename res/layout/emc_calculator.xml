<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
    		android:layout_width="fill_parent"
        	android:layout_height="50dp"
        	android:padding="5dp"
        	android:src="@drawable/calc_title" />
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:padding="5dp"
        	android:background="@drawable/substrate">
			<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="10dp"
    			android:paddingRight="10dp"
    			android:paddingTop="5dp"
    			android:paddingBottom="5dp">
    			<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="@string/rel_hum" />
                </LinearLayout>
        		<EditText
            		android:id="@+id/rel_hum"
            		android:layout_width="fill_parent"
            		android:layout_height="40dp"
            		android:layout_weight="3"
            		android:padding="10dp"
            		android:gravity="center"
            		android:numeric="integer"
            		android:maxLength="5"
            		android:textColor="@android:color/white"
            		android:background="@drawable/calc_input_default" />
        	</LinearLayout>
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="10dp"
    			android:paddingRight="10dp"
    			android:paddingTop="5dp"
    			android:paddingBottom="5dp">
    			<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="@string/amb_temp" />
                </LinearLayout>
        		<EditText
            		android:id="@+id/amb_temp"
            		android:layout_width="fill_parent"
            		android:layout_height="40dp"
            		android:layout_weight="3"
            		android:padding="10dp"
            		android:gravity="center"
            		android:numeric="integer"
            		android:maxLength="5"
            		android:textColor="@android:color/white"
            		android:background="@drawable/calc_input_default" />
        	</LinearLayout>
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="10dp"
    			android:paddingRight="10dp"
    			android:paddingTop="5dp"
    			android:paddingBottom="5dp">
    			<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="@string/emc" />
                </LinearLayout>
        		<EditText
            		android:id="@+id/emc"
            		android:layout_width="fill_parent"
            		android:layout_height="40dp"
            		android:layout_weight="3"
            		android:padding="10dp"
            		android:gravity="center"
            		android:numeric="decimal"
            		android:maxLength="5"
            		android:textColor="@android:color/white"
            		android:background="@drawable/calc_input_default" />
        	</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <Button
                android:id="@+id/get_emc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/get_emc"
                android:textColor="@android:color/white"
                android:background="@drawable/calc_button" />
            <Button
                android:id="@+id/get_temp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/get_temp"
                android:textColor="@android:color/white"
                android:background="@drawable/calc_button" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/emc_calc_help" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>