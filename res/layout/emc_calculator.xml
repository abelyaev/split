<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageView
    		android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:paddingLeft="20dp"
    		android:paddingRight="20dp"
    		android:paddingTop="10dp"
    		android:paddingBottom="10dp"
        	android:src="@drawable/calc_title" />
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="300dp"
        	android:orientation="vertical"
        	android:background="@drawable/substrate">
			<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="10dp"
    			android:paddingRight="10dp"
    			android:paddingTop="20dp"
    			android:paddingBottom="20dp">
    			<ImageView
    				android:layout_width="fill_parent"
        			android:layout_height="35dp"
        			android:gravity="left"
					android:layout_weight="4"
        			android:src="@drawable/calc_h_title" />
        		<EditText
            		android:id="@+id/rel_hum"
            		android:layout_width="fill_parent"
            		android:layout_height="40dp"
            		android:layout_weight="2"
            		android:padding="10dp"
            		android:gravity="center"
            		android:numeric="integer"
            		android:maxLength="5"
            		android:background="@drawable/calc_input_default" />
        	</LinearLayout>
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="10dp"
    			android:paddingRight="10dp"
    			android:paddingTop="20dp"
    			android:paddingBottom="20dp">
    			<ImageView
    				android:layout_width="fill_parent"
        			android:layout_height="35dp"
        			android:gravity="left"
					android:layout_weight="4"
        			android:src="@drawable/calc_t_title" />
        		<EditText
            		android:id="@+id/amb_temp"
            		android:layout_width="fill_parent"
            		android:layout_height="40dp"
            		android:layout_weight="2"
            		android:padding="10dp"
            		android:gravity="center"
            		android:numeric="integer"
            		android:maxLength="5"
            		android:background="@drawable/calc_input_default" />
        	</LinearLayout>
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:paddingLeft="10dp"
    			android:paddingRight="10dp"
    			android:paddingTop="20dp"
    			android:paddingBottom="20dp">
    			<ImageView
    				android:layout_width="fill_parent"
        			android:layout_height="16dp"
        			android:gravity="left"
					android:layout_weight="4"
        			android:src="@drawable/calc_w_title" />
        		<EditText
            		android:id="@+id/emc"
            		android:layout_width="fill_parent"
            		android:layout_height="40dp"
            		android:layout_weight="2"
            		android:padding="10dp"
            		android:gravity="center"
            		android:numeric="decimal"
            		android:maxLength="5"
            		android:background="@drawable/calc_input_default" />
        	</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Button
                android:id="@+id/get_emc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/get_emc" />
            <Button
                android:id="@+id/get_temp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/get_temp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>